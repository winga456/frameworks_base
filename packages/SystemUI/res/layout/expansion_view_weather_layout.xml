<com.android.systemui.vrtoxin.expansionview.panels.ExpansionViewWeatherPanel
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expansion_view_weather_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >

    <TextView
        android:id="@+id/expansion_view_weather_no_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/weather_bar_padding_top_bottom"
        android:paddingBottom="@dimen/weather_bar_padding_top_bottom"
        android:text="@string/weather_info_not_available"
        android:textSize="16sp"
        android:textColor="#ffffffff" />

    <LinearLayout
        android:id="@+id/expansion_view_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/weather_panel_margin_start_end"
        android:layout_marginEnd="@dimen/weather_panel_margin_start_end"
        android:paddingTop="@dimen/weather_bar_padding_top_bottom"
        android:paddingBottom="@dimen/weather_bar_padding_top_bottom"
        android:gravity="center_vertical" />

</com.android.systemui.vrtoxin.expansionview.panels.ExpansionViewWeatherPanel>
